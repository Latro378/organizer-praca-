{% extends 'default.html.twig' %}

{% block body %}
    <a href="/todo/create" class="btn btn-primary">Dodaj "Do zrobienia"</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Nazwa</th>
                <th>Data</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for todo in todos %}
            <tr>
                <td>{{ todo.id }}</td>
                <td>{{ todo.name }}</td>
                <td>{{ todo.date|date('F j, Y, g:i a') }}</td>
                <td>
                    <a href="/todo/edit/{{ todo.id }}" class="btn btn-info">Edytuj</a>
                    <a href="/todo/details/{{ todo.id }}" class="btn btn-primary">Szczegóły</a>
                    <a href="/todo/delete/{{ todo.id }}" class="btn btn-danger">Usuń</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block stylesheets %}

{% endblock %}
